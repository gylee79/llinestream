rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow read access to all files by default
    match /{allPaths=**} {
      allow read: if true;
    }
    
    // Restrict write access to authenticated users for the 'episodes' path
    match /episodes/{courseId}/{episodeId}/{fileName} {
      allow write: if request.auth != null;
    }
  }
}
