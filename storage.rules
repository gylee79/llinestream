rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // 기본적으로 모든 파일에 대한 읽기 접근을 모든 사용자(익명 포함)에게 허용합니다.
    // 이렇게 하면 생성된 publicUrl이 정상적으로 작동합니다.
    match /{allPaths=**} {
      allow read: if true;
      // 쓰기, 수정, 삭제는 인증된 사용자에게만 허용하여 보안을 유지합니다.
      // 필요에 따라 더 구체적인 규칙(예: 특정 사용자만 쓰기 허용)으로 변경할 수 있습니다.
      allow write: if request.auth != null;
    }
  }
}
