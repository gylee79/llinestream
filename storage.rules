rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Deny public read access to all video files.
    // They must be accessed via short-lived Signed URLs generated by the server.
    match /episodes/{episodeId}/video/{fileName} {
      allow read: if false;
      // Allow uploads for authenticated users (server-side action with admin privileges will handle this)
      allow write: if request.auth != null;
    }

    // Allow public read access for all other files (thumbnails, course images, etc.)
    // to ensure they display correctly in the app without needing special URLs.
    match /{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
